<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutPost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgViewtPostImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:background="@drawable/image_background"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/imgViewLike"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@mipmap/simple_heart" />

        <ImageView
            android:id="@+id/imgViewComment"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@mipmap/simple_comment" />

    </LinearLayout>

    <TextView
        android:id="@+id/textPostTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title goes hear ..."
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="likes"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textPostDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description goes hear ..."
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />


</LinearLayout>

